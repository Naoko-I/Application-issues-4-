<h2>follwer Index</h2>
<div class="row">
	<table>
		<th>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="8"></th>
		 	</tr>
		</th>
		<tbody>
			<% @user.following_user.each do |follow| %>
			<tr>
				<td><%= attachment_image_tag follow, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %></td>
				<td><%= follow.name %></td>
				<td><%= link_to "フォローを外す", user_relationships_path(follow), method: :delete, class: "btn btn-default" %></td>
				<td><%  link_to "Show", user_path(follow) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
