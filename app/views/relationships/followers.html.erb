<h2>follwer Index</h2>
	<div class="col-xs-12">
		<!--follows一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @user.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, size:"60x60", format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= user.name%></td>
					<td>フォロー数：<%= user.following_user.count %></td>
					<td>フォロワー数：<%= user.follower_user.count %></td>
					<td><%= link_to "フォローを外す", user_relationships_path(user), method: :delete %></td>
					<td><%= link_to "Show", user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>