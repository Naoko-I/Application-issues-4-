<div class="newbook">
  <h2>New Book</h2>
	<%= form_for(book) do |f| %>
		<% if book.errors.any? %>
	      <div class="error_message">
	          <h2><strong><%= book.errors.count %>errors prohibited this obj from being saved:</strong></h2>
	          <ul>
	          <% book.errors.full_messages.each do |message| %>
	            <li><%= message %></li>
	          <% end %>
	          </ul>
	      </div>
	    <% end %>

		<div class="field row">
		<h4>Title</h4>
		<%= f.text_field :title, class: "col-xs-12" %>
		</div>

		<div class="field row">
		<h4>Opinion</h4> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12" %>
		</div>

		<div class="actions row">
		<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
		</div>
	<% end %>
</div>




